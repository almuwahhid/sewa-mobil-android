<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sewamobil.sewamobil">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name="lib.almuwahhid.SuperUser.RequestHandler"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/ToolBarTheme">
        <activity
            android:name=".menu.main.MainActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".menu.login.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".menu.register.RegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".menu.splashscreen.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".menu.rentcar.detailrent.DetailRentCarActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".menu.booking.BookingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".menu.booking.detailbooking.DetailBookingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".menu.booking.listbooking.ListBookingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".menu.biodata.BiodataActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".menu.tentangaplikasi.TentangAplikasiActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".menu.wisata.detailwisata.DetailWisataActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".menu.rentcar.DetailRentCarAdapter" />
        <activity android:name=".menu.booking.detailbooking.DetailBookingAdapter" />
    </application>

</manifest>