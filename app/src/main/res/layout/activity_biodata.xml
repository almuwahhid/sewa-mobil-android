<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu.biodata.BiodataActivity">
    <include layout="@layout/main_toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">
            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="@dimen/dimen_24dp"
                android:layout_width="match_parent"
                android:gravity="bottom"
                android:paddingTop="@dimen/margin_small"
                android:clipToPadding="false"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edt_user_email"
                    style="@style/EditText"
                    android:drawableLeft="@drawable/ic_email_black_24dp"
                    android:hint="Email"
                    android:enabled="false"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:drawableTint="@color/grey_500"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:gravity="bottom"
                android:paddingTop="@dimen/margin_small"
                android:clipToPadding="false"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edt_nama_lengkap"
                    style="@style/EditText"
                    android:drawableLeft="@drawable/ic_person_black_24dp"
                    android:hint="Nama Lengkap"
                    android:drawableTint="@color/grey_500"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName" />
            </android.support.design.widget.TextInputLayout>
            <RadioGroup
                android:id="@+id/radiogrup"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:checked="true"
                    android:id="@+id/radiolaki"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Laki - Laki" />

                <RadioButton
                    android:id="@+id/radiowanita"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Perempuan" />
            </RadioGroup>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:gravity="bottom"
                android:paddingTop="@dimen/margin_small"
                android:clipToPadding="false"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edt_user_bdate"
                    style="@style/EditText"
                    android:drawableLeft="@drawable/ic_event_note_black_24dp"
                    android:hint="Tanggal Lahir"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:drawableTint="@color/grey_500"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="date" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:gravity="bottom"
                android:paddingTop="@dimen/margin_small"
                android:clipToPadding="false"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edt_alamat"
                    style="@style/EditText"
                    android:drawableLeft="@drawable/ic_location_city_black_24dp"
                    android:hint="Alamat"
                    android:drawableTint="@color/grey_500"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:gravity="bottom"
                android:paddingTop="@dimen/margin_small"
                android:clipToPadding="false"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edt_ktp"
                    style="@style/EditText"
                    android:drawableLeft="@drawable/ic_credit_card_black_24dp"
                    android:hint="Nomor KTP"
                    android:drawableTint="@color/grey_500"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:gravity="bottom"
                android:paddingTop="@dimen/margin_small"
                android:clipToPadding="false"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edt_pekerjaan"
                    style="@style/EditText"
                    android:drawableLeft="@drawable/ic_card_travel_black_24dp"
                    android:hint="Pekerjaan"
                    android:drawableTint="@color/grey_500"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:gravity="bottom"
                android:paddingTop="@dimen/margin_small"
                android:clipToPadding="false"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edt_instansi"
                    style="@style/EditText"
                    android:drawableLeft="@drawable/ic_location_city_black_24dp"
                    android:hint="Instansi"
                    android:drawableTint="@color/grey_500"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:gravity="bottom"
                android:paddingTop="@dimen/margin_small"
                android:clipToPadding="false"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edt_telp"
                    style="@style/EditText"
                    android:drawableLeft="@drawable/ic_phone_black_24dp"
                    android:hint="Nomor Telepon"
                    android:drawableTint="@color/grey_500"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>
            <LinearLayout
                android:id="@+id/lay_daftar"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:layout_marginBottom="@dimen/dimen_24dp"
                style="@style/BlackButtonStandardStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>