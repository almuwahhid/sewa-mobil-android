<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lay_booking"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_100"
    tools:context=".menu.booking.BookingActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:padding="@dimen/dimen_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textColor="@color/red_500"
                android:text="Isi Form dibawah dengan benar !"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="@dimen/dimen_24dp"
                android:layout_width="match_parent"
                android:gravity="bottom"
                android:clipToPadding="false"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edt_begindate"
                    style="@style/EditText"
                    android:drawableLeft="@drawable/ic_date_range_black_24dp"
                    android:hint="Tanggal sewa"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:drawableTint="@color/grey_500"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="date" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:gravity="bottom"
                android:clipToPadding="false"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edt_begintime"
                    style="@style/EditText"
                    android:drawableLeft="@drawable/ic_access_time_black_24dp"
                    android:hint="Waktu pengambilan"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:drawableTint="@color/grey_500"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="date" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:gravity="bottom"
                android:clipToPadding="false"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edt_duedate"
                    style="@style/EditText"
                    android:drawableLeft="@drawable/ic_date_range_black_24dp"
                    android:hint="Tanggal kembali"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:drawableTint="@color/grey_500"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="date" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:gravity="bottom"
                android:paddingTop="@dimen/margin_small"
                android:clipToPadding="false"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edt_jaminan"
                    style="@style/EditText"
                    android:drawableLeft="@drawable/ic_credit_card_black_24dp"
                    android:hint="Jaminan"
                    android:drawableTint="@color/grey_500"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dimen_8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/StandardTextOneRow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Waktu pengembalian : "/>
                <TextView
                    android:id="@+id/tv_duetime"
                    style="@style/StandardTextOneRow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dimen_8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/StandardTextOneRow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jumlah hari : "/>
                <TextView
                    android:id="@+id/tv_hari"
                    style="@style/StandardTextOneRow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dimen_8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/StandardTextOneRow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Biaya : "/>
                <TextView
                    android:id="@+id/tv_totalbiaya"
                    style="@style/StandardTextOneRow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btn_booking"
                android:layout_marginTop="@dimen/dimen_24dp"
                style="@style/BlackButtonStandardStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <TextView
                    android:layout_marginLeft="@dimen/dimen_32dp"
                    android:layout_marginRight="@dimen/dimen_32dp"
                    style="@style/StandardTextOneRow"
                    android:text="Booking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>