<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginBottom="@dimen/dimen_1dp"
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_72dp"
    android:id="@+id/lay_booking"
    style="@style/clickable"
    tools:context=".menu.booking.listbooking.ListBookingAdapter">
    <ImageView
        android:id="@+id/img_history"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:tint="@color/grey_400"
        android:src="@drawable/ic_history_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_toRightOf="@+id/img_history"
        android:padding="@dimen/dimen_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_kodebooking"
                android:textStyle="bold"
                android:text="Kode Booking : A1231"
                style="@style/SubtitleTextOneRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_status"
                style="@style/SubtitleText"
                android:layout_marginLeft="@dimen/dimen_8dp"
                android:textColor="@color/green_300"
                android:text="Dikonfirmasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_merk"
            android:text="Mobil Avanza"
            style="@style/TitleTextOneRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:tint="@color/grey_700"
                android:layout_width="@dimen/dimen_12dp"
                android:layout_height="@dimen/dimen_12dp"
                android:src="@drawable/ic_date_range_black_24dp"/>
            <TextView
                android:id="@+id/tv_date"
                android:layout_marginLeft="@dimen/dimen_4dp"
                android:text="10 Desember 2017 - 12 Desember 2017"
                style="@style/SubtitleTextOneRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>