<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lay_checkemail"
    android:background="@drawable/gradient_trans_black_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen_10dp"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".menu.register.checkemail.DialogCheckEmail">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:layout_weight="2"
            style="@style/EditText"
            android:id="@+id/edt_mendaftar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_tranperant"
            android:hint="Email"
            android:inputType="text"
            android:padding="@dimen/dimen_16dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:id="@+id/lay_mendaftar"
            android:layout_marginTop="@dimen/dimen_10dp"
            style="@style/ButtonStandardStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:layout_marginRight="@dimen/dimen_16dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mendaftar"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>